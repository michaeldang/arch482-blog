<!-- views/profile.ejs -->
<!doctype html>
<html>
<head>
    <title>The Communal Blog!</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.5.0/css/font-awesome.min.css"> <!-- load fontawesome -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css">
    <script src="//code.jquery.com/jquery-1.12.0.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.min.js"></script>
    <style>
        body 		{ padding-top:80px; word-wrap:break-word; }
    </style>
</head>
<body>
<div class="container">

    <% if (flash.postSuccessful) { %>
    <div class="alert alert-success">
        <%= flash.postSuccessful %>
        <a class="close" data-dismiss="alert" aria-label="close">&times;</a>
    </div>
    <% } %>

    <div class="page-header text-center">
        <h1>Hello <%= user.username %>, here's the blog!</h1>
        <br>
        <a href="/submit" class="btn btn-default btn-lg">Submit a post!</a>
        <a href="/logout" class="btn btn-default btn-lg">Logout</a>
    </div>

    <% if (posts.length == 0) { %>
        <div class="text-center"><h3>There appear to be no posts. Submit one!</h3></div>
    <% } else {
        posts.forEach(function(post) { %>
        <div class="row">
            <div class="well">
                <h2><%= post.title %></h2>
                <h2><small><%= post.comment %></small></h2>
                <h4><small>Posted by: <b><%= post.username %></b> on <b><%= post.date %></b></small></h4>
            </div>
        </div>
    <% });
    }%>

</div>

<% include ../partials/footer %>
</body>
</html>
